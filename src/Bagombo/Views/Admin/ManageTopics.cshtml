@{
  ViewData["Title"] = "Manage Topics";
  Layout = "_Layout";
}
@using Bagombo.Models.ViewModels.Admin
@model ManageTopicsViewModel



<div class="container-fluid">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading"><h3>Admin - Manage Topics</h3></div>
            <div class="panel-body">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Shown On Homepage?</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var topic in Model.Topics)
                        {
                          var cid = $"a{topic.Id}";
                        <tr id="@topic.Id">
                            <td>@topic.Title</td>
                            <td>@topic.Description</td>
                            <td>@if (topic.ShowOnHomePage == true)
                                {
                                  <text>Yes</text>
                                }</td>
                            <td>
                                <form asp-controller="Admin" asp-action="DeleteTopic" asp-route-id="@topic.Id" method="post">
                                    <span class="text-nowrap">
                                        <a class="btn btn-primary btn-sm" asp-controller="Admin" asp-action="EditTopic" asp-route-id="@topic.Id">Edit</a>
                                        <button class="btn btn-danger btn-sm delpost" type="submit">Delete</button>
                                    </span>
                                </form>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
                <a class="btn btn-primary" asp-controller="Admin" asp-action="AddTopic">Add Topic</a>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
